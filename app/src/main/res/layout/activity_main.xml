<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/RLmockup">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/LLpregunta"
        android:layout_gravity="top"
        android:textAlignment="center"
        android:gravity="center"
        android:alpha="0.5">

        <TextView
            android:layout_width="263dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Did you know?"
            android:id="@+id/textPregunta"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_gravity="left"
            android:layout_alignTop="@+id/LLpregunta"
            android:layout_alignLeft="@+id/LLpregunta"
            android:layout_alignStart="@+id/LLpregunta" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/LLtextoPrediccion">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textoPrediccion"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:width="0dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:textColor="#ffffffff" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LLcentral"
        android:baselineAligned="false"
        android:layout_below="@+id/LLpregunta"
        android:layout_alignLeft="@+id/LLpregunta"
        android:layout_alignStart="@+id/LLpregunta">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Another Fun Fact"
            android:id="@+id/boton"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:shadowColor="@android:color/darker_gray"
            android:onClick="haceClic" />

    </LinearLayout>

</RelativeLayout>
